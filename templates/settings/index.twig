{% extends 'amsearch/_layouts/settings' %}

{% set title = 'General'|t %}
{% set selectedTab = 'general' %}

{% block fields %}
    {{ forms.textField({
        label: general.pluginName.name|t,
        id: general.pluginName.handle,
        name: general.pluginName.handle,
        value: general.pluginName.value,
        instructions: 'Plugin name for the end user.'|t,
        first: true,
    }) }}
    {{ forms.lightswitchField({
        label: general.requireLoginForResults.name|t,
        id: general.requireLoginForResults.handle,
        name: general.requireLoginForResults.handle,
        on: general.requireLoginForResults.value,
    }) }}
{% endblock %}
